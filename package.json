    "tests:backend": "npx playwright test --project=backend",
    "tests:frontend": "npx playwright test --project=frontend-*",
    "report:allure": "allure generate ./allure-results --clean -o ./allure-report && allure open ./allure-report",
    "allure:prepare": "xcopy /E /I /Y \"./allure-report/history\" \"./allure-results/history\" || echo Nenhum hist√≥rico encontrado",
    "allure:generate": "allure generate ./allure-results -o ./allure-report --clean",
    "allure:clean-results": "rmdir /S /Q .\\allure-results",
    "allure:full": "npm run allure:prepare && npm run allure:generate && npm run allure:clean-results",
    "tests": "playwright test && npm run allure:full && npx allure open ./allure-report"
